{
  "name": "respondr",
  "version": "1.0.0",
  "description": "Basic chat app client",
  "main": "index.js",
  "private": true,
  "workspaces":["vue-client", "react-client", "server"],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "concurrently --kill-others-on-fail \"yarn start-server\" \"yarn start-vue-client\" \"yarn start-react-client\"",
    "serve-vue": "concurrently --kill-others-on-fail \"yarn start-server\" \"yarn start-vue-client\"",
    "serve-react": "concurrently --kill-others-on-fail \"yarn start-server\" \"yarn start-react-client\"",
    "start-server": "node ./server/server.js",
    "start-vue-client": "cd ./vue-client && vue-cli-service serve",
    "start-react-client": "cd ./react-client && yarn start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JamesFranc/respondr.git"
  },
  "author": "Jimmy Francis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JamesFranc/respondr/issues"
  },
  "homepage": "https://github.com/JamesFranc/respondr#readme",
  "dependencies": {
    "concurrently": "^7.0.0"
  }
}
